<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Trade</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/eTradeWithOnionArchitecture.WebUI.styles.css" asp-append-version="true" />
    <style>
        /* Custom styles for the sections */
        .hero-section {
            background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('https://via.placeholder.com/1500x400?text=Hero+Section+Background') no-repeat center center/cover;
            color: white;
            padding: 100px 0;
            text-align: center;
            margin-bottom: 30px;
        }

        .section-title {
            text-align: center;
            margin-bottom: 40px;
            font-size: 2.5rem;
            color: #333;
        }

        .product-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transition: transform 0.2s;
        }

            .product-card:hover {
                transform: translateY(-5px);
            }

            .product-card img {
                max-width: 100%;
                height: 150px;
                object-fit: cover;
                margin-bottom: 15px;
                border-radius: 4px;
            }

        .footer {
            position: sticky;
            bottom: 0;
            width: 100%;
            white-space: nowrap;
            line-height: 60px; /* Vertically center the text there */
            background-color: #f8f9fa;
            border-top: 1px solid #e7e7e7;
            padding-top: 20px;
            padding-bottom: 20px;
        }

        /* --- Logo Specific Styles --- */
        .navbar-brand .logo-image {
            width: 75px;
            height: 75px;
            border-radius: 50%; /* Makes the image circular */
            object-fit: cover; /* Ensures the image covers the area without distortion */
        }
        /* --- End Logo Specific Styles --- */
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="logo-image d-inline-block align-text-top me-2" src="/img/logo/hero.jpg" alt="E-Trade Logo">
                    E-Trade
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Categories
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#">Electronics</a></li>
                                <li><a class="dropdown-item" href="#">Clothing</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Books</a></li>
                            </ul>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <a class="btn btn-success me-2" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        <a class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
           

            @RenderBody()

            <section class="mb-5">
                <h2 class="section-title">Most Sold Products</h2>
                <div class="row">
                    <div class="col-md-4 col-sm-6 mb-4">
                        <div class="product-card">
                            <img src="https://via.placeholder.com/200x150?text=Product+1" alt="Product 1">
                            <h5>Product Name 1</h5>
                            <p class="text-muted">TL 99.99</p>
                            <a href="#" class="btn btn-sm btn-success">Add to Cart</a>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-6 mb-4">
                        <div class="product-card">
                            <img src="https://via.placeholder.com/200x150?text=Product+2" alt="Product 2">
                            <h5>Product Name 2</h5>
                            <p class="text-muted">TL 149.99</p>
                            <a href="#" class="btn btn-sm btn-success">Add to Cart</a>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-6 mb-4">
                        <div class="product-card">
                            <img src="https://via.placeholder.com/200x150?text=Product+3" alt="Product 3">
                            <h5>Product Name 3</h5>
                            <p class="text-muted">TL 79.99</p>
                            <a href="#" class="btn btn-sm btn-success">Add to Cart</a>
                        </div>
                    </div>
                </div>
            </section>

            <section class="mb-5">
                <h2 class="section-title">Trending Products</h2>
                <div class="row">
                    <div class="col-md-4 col-sm-6 mb-4">
                        <div class="product-card">
                            <img src="https://via.placeholder.com/200x150?text=Trending+1" alt="Trending Product 1">
                            <h5>Trending Item 1</h5>
                            <p class="text-muted">TL 129.99</p>
                            <a href="#" class="btn btn-sm btn-success">Add to Cart</a>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-6 mb-4">
                        <div class="product-card">
                            <img src="https://via.placeholder.com/200x150?text=Trending+2" alt="Trending Product 2">
                            <h5>Trending Item 2</h5>
                            <p class="text-muted">TL 199.99</p>
                            <a href="#" class="btn btn-sm btn-success">Add to Cart</a>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-6 mb-4">
                        <div class="product-card">
                            <img src="https://via.placeholder.com/200x150?text=Trending+3" alt="Trending Product 3">
                            <h5>Trending Item 3</h5>
                            <p class="text-muted">TL 59.99</p>
                            <a href="#" class="btn btn-sm btn-success">Add to Cart</a>
                        </div>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2025 - E-Trade - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>